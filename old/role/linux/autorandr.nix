{ config, lib, pkgs, ... }:
{
    imports = [
      ./default.nix
    ];

    programs.autorandr = {
      enable = true;
      hooks.postswitch = {
        "restart_i3" = ''
          sleep 5
          i3-msg restart
          '';
      };
      
      profiles = {
        "twoDisplaysAMDProWX3300" = {
          fingerprint = {
            DisplayPort-0 = "";
            DisplayPort-1 = "";
          };
          config = {
            DisplayPort-0 = {
              crtc = 1;
              mode = "3840x2160";
              position = "0x0";
              primary = true;
              rate = "60.00";
            };

            DisplayPort-1 = {
              crtc = 0;
              mode = "3840x2160";
              position = "3840x0";
              primary = false;
              rate = "60.00";
            };
          };
        };

        "singleDisplayRightAMDProWX3300" = {
          fingerprint = {
            DisplayPort-1 = "";
          };
          config = {
            DisplayPort-0.enable = false;

            DisplayPort-1 = {
              crtc = 0;
              mode = "3840x2160";
              position = "0x0";
              primary = true;
              rate = "60.00";
            };
          };
        };
        "singleDisplayLeftAMDProWX3300" = {
          fingerprint = {
            DisplayPort-0 = "";
          };
          config = {
            DisplayPort-1.enable = false;

            DisplayPort-0 = {
              crtc = 0;
              mode = "3840x2160";
              position = "0x0";
              primary = true;
              rate = "60.00";
            };
          };
        };
      };
    };
}